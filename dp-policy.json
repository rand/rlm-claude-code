        "name": "representative-unit-slice",
        "cmd": ["uv", "run", "--extra", "dev", "pytest", "-q", "tests/unit/test_repl_environment.py"]
      }
    ],
    "pre-commit": [
      {
        "name": "representative-unit-slice",
        "cmd": ["uv", "run", "--extra", "dev", "pytest", "-q", "tests/unit/test_repl_environment.py"]
      }
    ],
    "pre-push": [
      {
        "name": "representative-unit-slice",
        "cmd": ["uv", "run", "--extra", "dev", "pytest", "-q", "tests/unit/test_repl_environment.py"]
      }
    ]
  }
}
